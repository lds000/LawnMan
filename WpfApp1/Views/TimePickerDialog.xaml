<Window x:Class="BackyardBoss.Views.RadialTimePickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:BackyardBoss.UserControls"
        Title="Select Time"
        Height="450"
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <controls:RadialTimePicker x:Name="TimePicker" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="10,0" Click="Confirm_Click" />
            <Button Content="Cancel" Width="80" Margin="10,0" Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>
