<UserControl x:Class="BackyardBoss.Views.DebugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:BackyardBoss.Views"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Margin="10">
        <TextBlock Text="Debug Information" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
        <!-- Debug type checkboxes via DebugSettingsView -->
        <views:DebugSettingsView />
        <!-- Debug info display -->
        <ListView x:Name="DebugListView" ItemsSource="{Binding FilteredDebugItems}" Height="300"
                  Foreground="Black" 
                  Background="{DynamicResource CardBackground}"
                  SizeChanged="DebugListView_SizeChanged">
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Background" Value="#333333"/>
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Header="Time" Width="300" DisplayMemberBinding="{Binding Timestamp}"/>
                    <GridViewColumn Header="Type" Width="200" DisplayMemberBinding="{Binding Source}"/>
                    <GridViewColumn Header="Message" Width="600" DisplayMemberBinding="{Binding Message}"/>
                    <GridViewColumn Header="Details" x:Name="DetailsColumn" DisplayMemberBinding="{Binding Details}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
