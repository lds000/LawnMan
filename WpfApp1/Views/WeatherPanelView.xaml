<Window x:Class="BackyardBoss.Views.WeatherPanelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BackyardBoss.ViewModels"
        Title="Weather Details" Height="400" Width="600"
        Background="Black"
        WindowStartupLocation="CenterScreen">


    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="{Binding BackgroundImage}" />
        </Grid.Background>

        <!-- Weather Icon -->
        <Image Grid.Column="0" Width="100" Height="100" Margin="0,0,20,0"
               Source="{Binding WeatherIcon}" />

        <!-- Weather Details -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Current Weather" FontSize="22" Foreground="White" Margin="0,0,0,10" />
            <TextBlock Text="{Binding Description}" FontSize="18" Foreground="LightGray" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding TemperatureDisplay}" FontSize="18" Foreground="LightGray" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding HumidityDisplay}" FontSize="18" Foreground="LightGray" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding WindDisplay}" FontSize="18" Foreground="LightGray" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding PressureDisplay}" FontSize="18" Foreground="LightGray" Margin="0,0,0,5"/>
        </StackPanel>
    </Grid>
</Window>
