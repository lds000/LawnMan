<Window x:Class="BackyardBoss.Views.WeatherPanelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BackyardBoss.ViewModels"
        Title="Weather Details" Height="480" Width="720"
        Background="#232526"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- SVG Geometry Icons -->
        <Geometry x:Key="HumidityIcon">M12,2A10,10 0 1,1 2,12A10,10 0 0,1 12,2M12,4.5C10.07,4.5 8.5,6.07 8.5,8C8.5,10.5 12,15.5 12,15.5C12,15.5 15.5,10.5 15.5,8C15.5,6.07 13.93,4.5 12,4.5M12,9.5A1.5,1.5 0 1,0 13.5,8A1.5,1.5 0 0,0 12,9.5Z</Geometry>
        <Geometry x:Key="WindIcon">M2,12H17A2,2 0 0,1 19,14A2,2 0 0,1 17,16H6A2,2 0 0,1 4,14A2,2 0 0,1 6,12H20</Geometry>
        <Geometry x:Key="PressureIcon">M12,2A10,10 0 1,1 2,12A10,10 0 0,1 12,2M12,7A5,5 0 1,0 17,12A5,5 0 0,0 12,7Z</Geometry>
    </Window.Resources>
    <Border CornerRadius="20" Background="#232526" Padding="0" Margin="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Weather Icon and Main Info -->
            <StackPanel Grid.Column="0" Margin="30,30,20,30" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Width="120" Height="120" CornerRadius="60" Background="#33FFFFFF" VerticalAlignment="Center" Margin="0,0,0,18">
                    <Image Source="{Binding WeatherIcon}" Width="80" Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <TextBlock Text="{Binding Temperature}" FontSize="44" FontWeight="Bold" Foreground="#FFF" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Condition}" FontSize="20" Foreground="#FFB0B0B0" HorizontalAlignment="Center"/>
                <TextBlock Text="Boise, ID" FontSize="14" Foreground="#FFB0B0B0" HorizontalAlignment="Center"/>
            </StackPanel>
            <!-- Weather Details -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,30,30,30">
                <TextBlock Text="Current Weather Details" FontSize="26" FontWeight="Bold" Foreground="#FFF" Margin="0,0,0,18"/>
                <Separator/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Path Data="{StaticResource HumidityIcon}" Fill="#4FC3F7" Width="28" Height="28" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding HumidityDisplay}" FontSize="18" Foreground="#FFF" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Path Data="{StaticResource WindIcon}" Fill="#90CAF9" Width="28" Height="28" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding WindDisplay}" FontSize="18" Foreground="#FFF" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Path Data="{StaticResource PressureIcon}" Fill="#FFD54F" Width="28" Height="28" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding PressureDisplay}" FontSize="18" Foreground="#FFF" VerticalAlignment="Center"/>
                </StackPanel>
                <Separator/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Feels Like:" FontSize="16" Foreground="#FFB0B0B0" Width="100"/>
                    <TextBlock Text="{Binding FeelsLike}" FontSize="16" Foreground="#FFF"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Visibility:" FontSize="16" Foreground="#FFB0B0B0" Width="100"/>
                    <TextBlock Text="{Binding Visibility}" FontSize="16" Foreground="#FFF"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Sunrise:" FontSize="16" Foreground="#FFB0B0B0" Width="100"/>
                    <TextBlock Text="{Binding Sunrise}" FontSize="16" Foreground="#FFF"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Sunset:" FontSize="16" Foreground="#FFB0B0B0" Width="100"/>
                    <TextBlock Text="{Binding Sunset}" FontSize="16" Foreground="#FFF"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
