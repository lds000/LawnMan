<UserControl x:Class="BackyardBoss.UserControls.WeatherCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:BackyardBoss.Converters"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <!--BoolToVisibilityConverter-->
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Background="{DynamicResource CardBackground}"
            CornerRadius="10"
            Padding="10"
            Margin="10"
            Cursor="Hand"
            MouseLeftButtonUp="WeatherPanel_Click">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    >

                <!-- Badge-like icon -->
                <Border Background="{DynamicResource AccentBrush}"
                    CornerRadius="30"
                    Width="60" Height="60"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0">
                    <Image Source="{Binding WeatherIcon}"
                       Width="30" Height="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Temperature}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryText}" />
                    <TextBlock Text="{Binding Condition}"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextBrush}" />
                    <TextBlock Text="Boise, ID" 
           FontSize="10" 
           Foreground="{DynamicResource SecondaryTextBrush}" />

                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
