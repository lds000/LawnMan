<UserControl x:Class="BackyardBoss.UserControls.SetEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:BackyardBoss.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600"
             Tag="{Binding}">

    <UserControl.Resources>
        <conv:AdjustmentVisibilityConverter x:Key="AdjustmentVisibilityConverter" />
    </UserControl.Resources>

    <TabControl ItemsSource="{Binding VisibleSets}"
            Margin="10"
            Background="Transparent"
            SelectedIndex="0">

        <!-- ✅ Tab header binding -->
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding SetName}"
                       FontSize="16"
                       FontWeight="Bold"
                       Padding="6,2"
                       Foreground="White"/>
            </DataTemplate>
        </TabControl.ItemTemplate>

        <!-- ✅ Tab style for dark background -->
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#222" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="12,4"/>
                <Setter Property="Margin" Value="4,0"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6,6,0,0"
                                Padding="{TemplateBinding Padding}">
                                <!-- Use ContentPresenter here to honor ItemTemplate binding -->
                                <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}" />
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </TabControl.Resources>

        <!-- ✅ Tab content template -->
        <TabControl.ContentTemplate>
            <DataTemplate>
                <StackPanel Orientation="Vertical" Margin="10">

                    <!-- Mode + Pulse/Soak -->
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                        <CheckBox
                                  HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                  Style="{StaticResource CircleCheckboxStyle}"
                              IsChecked="{Binding Mode}" />
                            <TextBlock VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontSize="24"
                                       Margin="5,0,5,0"
                                       Style="{StaticResource TitleTextBlockStyle}">
                                Active
                            </TextBlock>
                        </StackPanel>
                        <StackPanel>
                        <Button Content="{Binding PulseDurationMinutes}"
                            Command="{Binding OpenPulseKeypadCommand}"
                            Width="80"
                            Height="40"
                                FontSize="24"
                            Style="{StaticResource PrimaryButtonStyle}" />
                            <TextBlock
                                FontSize="14"
                                HorizontalAlignment="Center"
                                Style="{StaticResource TitleTextBlockStyle}">
                                Pulse
                            </TextBlock>
                        </StackPanel>

                        <StackPanel>
                        <Button Content="{Binding SoakDurationMinutes}"
                            Command="{Binding OpenSoakKeypadCommand}"
                            Width="80"
                            Height="40"
                                FontSize="24"
                            Style="{StaticResource PrimaryButtonStyle}" />
                            <TextBlock
                                FontSize="14"
                                HorizontalAlignment="Center"
                                Style="{StaticResource TitleTextBlockStyle}">
                                Soak
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Duration Info -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock FontSize="14">
                        <Run Text="Run Duration: " />
                        <Run Text="{Binding RunDurationMinutes}" />
                        <Run Text="m" />
                        </TextBlock>

                        <TextBlock FontSize="14"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="10,0,0,0"
                               Visibility="{Binding Tag.SeasonalAdjustment, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource AdjustmentVisibilityConverter}}">
                        <Run Text=" → " />
                        <Run Text="{Binding SeasonallyAdjustedMinutes, Mode=OneWay}" />
                        <Run Text="m" />
                        </TextBlock>
                    </StackPanel>

                    <!-- Duration Slider -->
                    <Slider Minimum="0"
                        Maximum="30"
                        Style="{StaticResource TouchSliderStyle}"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Value="{Binding RunDurationMinutes, Mode=TwoWay}"
                        Height="50" />
                </StackPanel>
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>

</UserControl>
