<UserControl x:Class="BackyardBoss.UserControls.SeasonalAdjustControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="350">

    <StackPanel Margin="0,10">
        <!-- Title and optional subtext -->
        <TextBlock Text="Seasonal Adjustment" FontSize="18" FontWeight="Bold" />
        <TextBlock Text="Adjusts all set durations based on season." 
                   FontSize="12" 
                   Foreground="{DynamicResource SecondaryTextBrush}" 
                   Margin="0,0,0,8" />

        <!-- Slider and value in one row -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Slider Width="200"
                    Style="{DynamicResource TouchSliderStyle}"
                    Minimum="50" Maximum="200"
                    TickFrequency="10"
                    IsSnapToTickEnabled="True"
                    Value="{Binding SeasonalAdjustmentPercent, Mode=TwoWay}" />
            <TextBlock Text="{Binding SeasonalAdjustmentPercent, StringFormat={}{0}%}"
                       FontSize="20" FontWeight="Bold"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Per-set controls -->
        <ItemsControl ItemsSource="{Binding Sets}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource CardBackground}" CornerRadius="8" Margin="0,8,0,0" Padding="8">
                        <DockPanel VerticalAlignment="Center">
                            <!-- Enable Checkbox -->
                            <CheckBox Style="{DynamicResource CircleCheckboxStyle}"
                                      IsChecked="{Binding Mode, Mode=TwoWay}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,12,0"/>
                            <!-- Set Name -->
                            <TextBlock Text="{Binding SetName}" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <!-- Duration Slider -->
                            <Slider Width="120" Minimum="1" Maximum="60" Value="{Binding RunDurationMinutes, Mode=TwoWay}" Style="{DynamicResource TouchSliderStyle}" Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding RunDurationMinutes}" FontSize="16" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="min" FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <!-- Pulse/Soak Edit Button -->
                            <Button Style="{DynamicResource SecondaryButtonStyle}" Content="Pulse/Soak" Command="{Binding OpenPulseKeypadCommand}" Margin="0,0,8,0"/>
                            <Button Style="{DynamicResource SecondaryButtonStyle}" Content="Soak" Command="{Binding OpenSoakKeypadCommand}"/>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
